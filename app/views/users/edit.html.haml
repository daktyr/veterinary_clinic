.panel.panel-default
  .panel-heading Edycja danych użytownika
  .panel-body
    = simple_form_for user do |f|
      = f.error_notification
      .form-inputs
        .row
          .col-md-2
          .col-md-8
            .panel.panel-info
              .panel-heading Dane podstawowe
              .panel-body
                .row
                  .col-md-6
                    = f.input :first_name, label: 'Imię', placeholder: 'Wpisz imię', required: true, autofocus: true
                    = f.input :email, label: 'Email', placeholder: 'Wpisz adres email', required: true
                    = f.input :password, label: 'Hasło', placeholder: 'Wpisz nowe hasło'
                    = f.input :phone_number, label: 'Numer telefonu', placeholder: 'Wpisz numer telefonu', required: true
                  .col-md-6
                    = f.input :last_name, label: 'Nazwisko', placeholder: 'Wpisz nazwisko', required: true
                    = f.input :pesel, label: 'Pesel', placeholder: 'Wpisz numer pesel', required: true
                    = f.input :password_confirmation, label: 'Potwierdzenie nowego hasła', placeholder: 'Wpisz ponownie nowe hasło'
          .col-md-2
        .row
          .col-md-2
          .col-md-8
            .panel.panel-info
              .panel-heading Dane adresowe
              .panel-body
                = f.simple_fields_for :address do |ff|
                  .row
                    .col-md-6
                      = ff.input :street, label: 'Ulica', placeholder: 'Wpisz nazwę ulicy', required: true
                    .col-md-3
                      = ff.input :house_number, label: 'Numer domu', placeholder: 'Wpisz numer domu', required: true
                    .col-md-3
                      = ff.input :flat_number, label: 'Numer mieszkania', placeholder: 'Wpisz numer mieszkania'
                  .row
                    .col-md-6
                      = ff.input :zip_code, label: 'Kod pocztowy', placeholder: 'Wpisz kod pocztowy', required: true
                      = ff.input :borough, label: 'Gmina', placeholder: 'Wpisz nazwę gminy'
                      = ff.input :province, label: 'Województwo', placeholder: 'Wpisz nazwę województwa'
                    .col-md-6
                      = ff.input :city, label: 'Miasto', placeholder: 'Wpisz nazwę miasta', required: true
                      = ff.input :district, label: 'Powiat', placeholder: 'Wpisz nazwę powiatu'
                      = ff.input :country, label: 'Państwo'

          .col-md-2
        .row
          .col-md-2
          .col-md-8
            .form-actions
              = link_to 'Anuluj', :back, class: 'btn btn-default'
              .pull-right
                = f.button :submit, "Zapisz", class: "btn btn-default"
          .col-md-2
