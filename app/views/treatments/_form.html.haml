= simple_form_for treatment do |f|
  = f.error_notification
  .form-inputs
    = f.input :name, label: 'Nazwa', placeholder: 'Wpisz nazwÄ™ zabiegu', required: true
    = f.input :cost, as: :string, label: 'Koszt', placeholder: 'Wpisz koszt zabiegu', required: true
    = f.input :description, label: 'Opis', placeholder: 'Wpisz opis zabiegu'
  .form-actions
    = link_to "Anuluj", dictionaries_path(tab: 'treatments'), class: "btn btn-default"
    .pull-right
      = f.button :submit, "Zapisz", class: "btn btn-default"
