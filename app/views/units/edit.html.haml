.panel.panel-default
  .panel-heading Edycja jednostki
  .panel-body
    = simple_form_for unit do |f|
      = f.error_notification
      .row
        .col-md-1
        .col-md-10
          .form-inputs
            .row
              .col-md-8
                = f.input :name, label: 'Nazwa', placeholder: 'Wpisz nazwÄ™ jednostki', required: true, autofocus: true
              .col-md-4
                = f.input :status, label: 'Status', required: true
          .form-actions
            = link_to "Anuluj", dictionaries_path(tab: 'units'), class: "btn btn-default"
            .pull-right
              = f.button :submit, "Zapisz", class: "btn btn-default"
        .col-md-1
