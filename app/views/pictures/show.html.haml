.panel.panel-default
  .panel-heading Zdjęcia
  .panel-body
    .row
      .col-md-6
        %table.table
          %tbody
            %tr
              %td= "Nazwa: #{picture.name}"
            %tr
              %td= "Użytkownik: #{picture.try(:user).try(:full_name)}"
            %tr
              %td= "Opis zdjęcia: #{picture.description}"
            %tr
              %td
      .col-md-6
        = image_tag picture.image, width: "500"
    .pull-right
      = link_to 'Powrót', :back, class: 'btn btn-default'
