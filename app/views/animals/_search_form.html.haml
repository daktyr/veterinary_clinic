= form_tag user_animals_path(params[:user_id]), method: :get do
  = hidden_field_tag :direction, params[:direction]
  = hidden_field_tag :sort, params[:sort]
  .form-inline
    = text_field_tag :search, params[:search], placeholder: 'Wpisz numer identyfikacyjny lub nazwę zwierzęcia', class: 'form-control', size: 40
    = submit_tag "Szukaj", name: nil, class: 'btn btn-default'
    - unless current_user.pacjent?
      .pull-right
        = link_to 'Nowe zwierzę', new_user_animal_path(params[:user_id]), class: "btn btn-default"
