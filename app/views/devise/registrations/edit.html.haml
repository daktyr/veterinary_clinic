.panel.panel-default
  .panel-heading Edycja danych użytkownika
  .panel-body
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification
      .row
        .col-md-1
        .col-md-5
          .form-inputs
            = f.input :first_name, label: 'Imię', placeholder: 'Wpisz imię', required: true, autofocus: true
            = f.input :last_name, label: 'Nazwisko', placeholder: 'Wpisz nazwisko', required: true
            = f.input :pesel, label: 'Pesel', placeholder: 'Wpisz numer pesel', required: true
            = f.input :phone_number, label: 'Numer telefonu', placeholder: 'Wpisz numer telefonu', required: true
            = f.input :email, label: 'Email', placeholder: 'Wpisz adres email', required: true
            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              %p
                Oczekuję na potwierdzenie adresu: #{resource.unconfirmed_email}
            = f.input :password, label: 'Nowe hasło', placeholder: 'Wpisz nowe hasło', autocomplete: "off", hint: "zostaw puste jeśli nie chcesz zmieniać hasła", required: false
            = f.input :password_confirmation, label: 'Potwierdzenie nowego hasła', placeholder: 'Wpisz ponownie nowe hasło', required: false
            = f.input :current_password, label: 'Aktualne hasło', placeholder: 'Wpisz aktualne hasło', hint: "wymagane wpisanie aktualnego hasła w celu potwierdzenia zmian", required: true
        .col-md-5
          = f.simple_fields_for :address do |a|
            = a.input :street, label: 'Ulica', placeholder: 'Wpisz nazwę ulicy', required: true
            = a.input :house_number, label: 'Numer domu', placeholder: 'Wpisz numer domu', required: true
            = a.input :flat_number, label: 'Numer mieszkania', placeholder: 'Wpisz numer mieszkania'
            = a.input :zip_code, label: 'Kod pocztowy', placeholder: 'Wpisz kod pocztowy', required: true
            = a.input :city, label: 'Miasto', placeholder: 'Wpisz nazwę miasta', required: true
            = a.input :borough, label: 'Gmina', placeholder: 'Wpisz nazwę gminy'
            = a.input :district, label: 'Powiat', placeholder: 'Wpisz nazwę powiatu'
            = a.input :province, label: 'Województwo', placeholder: 'Wpisz nazwę województwa'
            = a.input :country, label: 'Państwo'
        .col-md-1
      .row
        .col-md-1
        .col-md-10
          .form-actions
            = link_to "Cofnij", profile_path, class: "btn btn-default"
            .pull-right
              = f.button :submit, "Zapisz", class: "btn btn-default"
        .col-md-1
