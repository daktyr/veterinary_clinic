.row
  .col-md-3
  .col-md-6
    .panel.panel-default
      .panel-heading Logowanie
      .panel-body#static_pages
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-inputs
            = f.input :email, label: 'Email', placeholder: 'Wpisz adres email', required: false, autofocus: true
            = f.input :password, label: 'Hasło', placeholder: 'Wpisz hasło', required: false
            = f.input :remember_me, label: 'Zapamiętaj mnie', as: :boolean if devise_mapping.rememberable?
          .form-actions.pull-right
            = f.button :submit, "Zaloguj"
  .col-md-3

