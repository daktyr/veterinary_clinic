.row
  .col-md-3
  .col-md-6
    .panel.panel-default
      .panel-heading Wyślij instrukcje potwierdzenia adresu email
      .panel-body
        = simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
          = f.error_notification
          = f.full_error :confirmation_token
          .form-inputs
            = f.input :email, label: 'Email', placeholder: 'Wpisz adres email', required: true, autofocus: true
          .form-actions.pull-right
            = f.button :submit, "Wyślij"
  .col-md-3
