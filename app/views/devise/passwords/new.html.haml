.row
  .col-md-3
  .col-md-6
    .panel.panel-default
      .panel-heading Przypomnienie hasła
      .panel-body
        = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = f.error_notification
          .form-inputs
            = f.input :email, label: 'Email', placeholder: 'Wpisz adres email', required: true, autofocus: true
          .form-actions.pull-right
            = f.button :submit, "Wyślij"
  .col-md-3
