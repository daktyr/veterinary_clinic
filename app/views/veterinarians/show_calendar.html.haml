.panel.panel-default
  .panel-heading Terminarz
  .panel-body
    #veterinarians
      %h2#month
        = link_to "<", date: @date.prev_month
        = l(@date, format: :short)
        = link_to ">", date: @date.next_month
      = calendar @date do |date|
        = date.day
        %br
        - if Date.today <= date
          - if @veterinarian.on_vacation?(date)
            = link_to "Urlop", '#', class: "btn btn-warning disabled"
          - elsif @veterinarian.working_today?(date)
            = link_to icon('plus'), new_user_appointment_path(params[:user_id], veterinarian_id: params[:id], day: date), title: 'Zapisz się na wizytę', class: "btn btn-success"
          - else
            = link_to "Dzień wolny", '#', class: "btn btn-warning disabled"
        - else
          %h4= "-"
